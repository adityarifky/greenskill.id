rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /registration_schemas/{schemaId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }

    match /training_offers/{offerId} {
      allow read, write: if request.auth != null;
    }

    // Allow users to manage their own modules
    match /modules/{moduleId} {
      // User can get, update, or delete a module if they are the owner.
      allow get, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // User can create a module if the new module's userId matches their own.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // User can list modules if they are authenticated. The client-side query MUST filter by userId.
    match /modules/{document=**} {
        allow list: if request.auth != null;
    }


    // Allow users to manage their own folders
    match /user_folders/{folderId} {
      // User can get, update, or delete a folder if they are the owner.
      allow get, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // User can create a folder if the new folder's userId matches their own.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // User can list folders if they are authenticated. The client-side query MUST filter by userId.
    match /user_folders/{document=**} {
        allow list: if request.auth != null;
    }
  }
}
