rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /registration_schemas/{schemaId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }

    match /training_offers/{offerId} {
      allow read, write: if request.auth != null;
    }

    // Rules for modules. Client queries MUST filter by userId.
    match /modules/{moduleId} {
      // Allow read (get, list) if the user is authenticated.
      // List security is enforced by client-side queries filtering on userId.
      allow read: if request.auth != null;
      
      // Allow write (create, update, delete) if the user is the owner.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Rules for user_folders. Client queries MUST filter by userId.
    match /user_folders/{folderId} {
      // Allow read (get, list) if the user is authenticated.
      // List security is enforced by client-side queries filtering on userId.
      allow read: if request.auth != null;

      // Allow write (create, update, delete) if the user is the owner.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
