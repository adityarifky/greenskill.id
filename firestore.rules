rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /registration_schemas/{schemaId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }

    match /training_offers/{offerId} {
      allow read, write: if request.auth != null;
    }

    // Allow users to manage their own templates
    match /offer_templates/{templateId} {
      allow read, create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
