rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /registration_schemas/{schemaId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }

    match /training_offers/{offerId} {
      allow read, write: if request.auth != null;
    }

    // Rules for single module document operations
    match /modules/{moduleId} {
      // User can get, update, or delete a module if they are the owner.
      allow get, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // User can create a module if the new module's userId matches their own.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Rules for querying the modules collection
    match /modules/{document=**} {
        // Allow a user to list (query) modules.
        // The client-side query MUST enforce security by filtering by userId.
        allow list: if request.auth != null;
    }

    // Rules for single folder document operations
    match /user_folders/{folderId} {
      // User can get, update, or delete a folder if they are the owner.
      allow get, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // User can create a folder if the new folder's userId matches their own.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Rules for querying the user_folders collection
    match /user_folders/{document=**} {
        // Allow a user to list (query) folders.
        // The client-side query MUST enforce security by filtering by userId.
        allow list: if request.auth != null;
    }
  }
}
