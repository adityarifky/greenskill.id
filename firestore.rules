rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only manage their own documents.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public read for schemes, but only owners can write.
    match /registration_schemas/{schemaId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Users can only manage their own training offers.
    // The query from the client MUST include `where('userId', '==', request.auth.uid)`.
    match /training_offers/{offerId} {
      allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Users can only manage their own modules.
    // The query from the client MUST include `where('userId', '==', request.auth.uid)`.
    match /modules/{moduleId} {
       allow read, write: if request.auth.uid == request.resource.data.userId;
    }

    // Users can only manage their own folders.
    // The query from the client MUST include `where('userId', '==', request.auth.uid)`.
    match /user_folders/{folderId} {
        allow read, write: if request.auth.uid == request.resource.data.userId;
    }
  }
}
