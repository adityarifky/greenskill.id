rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only manage their own documents.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public read for schemes, but only owners can write.
    match /registration_schemas/{schemaId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.resource.data.userId == request.auth.uid;
    }

    // Users can only manage their own training offers.
    // This combined rule is more robust. `list` allows the query to execute,
    // while `read` ensures document-level security, returning only owned documents.
    match /training_offers/{offerId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow list: if request.auth != null;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Users can only manage their own modules.
    // Robust rule: `list` allows the query, `read` secures each document.
    match /modules/{moduleId} {
       allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
       allow list: if request.auth != null;
       allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Users can only manage their own folders.
    // Robust rule: `list` allows the query, `read` secures each document.
    match /user_folders/{folderId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow list: if request.auth != null;
        allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
