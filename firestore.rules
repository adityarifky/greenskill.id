rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only manage their own documents.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public read for schemes, but only owners can write.
    match /registration_schemas/{schemaId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Users can only manage their own training offers.
    match /training_offers/{offerId} {
      // Allow read/write on single documents if user is the owner
      allow get, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow create if the new document's userId matches the user's uid
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow list (collection query) for authenticated users.
      // The client query MUST enforce ownership via a 'where' clause.
      allow list: if request.auth != null && request.query.where.userId == request.auth.uid;
    }

    // Users can only manage their own modules.
    match /modules/{moduleId} {
       // Allow get/write on single documents if user is the owner
       allow get, update, delete, create: if request.auth != null && request.resource.data.userId == request.auth.uid;
       // Allow list (collection query) if the query is scoping to the user's own documents.
       allow list: if request.auth != null && request.query.where.userId == request.auth.uid;
    }

    // Users can only manage their own folders.
    match /user_folders/{folderId} {
        // Allow write operations if the user is the owner
        allow create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
        // Allow reading a single document if they are the owner
        allow get: if request.auth != null && resource.data.userId == request.auth.uid;
        // Allow list operation only if the query is filtered by the user's ID.
        allow list: if request.auth != null && request.query.where.userId == request.auth.uid;
    }
  }
}
